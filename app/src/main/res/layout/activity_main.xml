<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Rock , Paper and Scissor"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:fontFamily="@font/roboto"
         />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/idLLcomputer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="4dp"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/idIvComputer"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="20dp"
                android:src="@drawable/question">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_margin="-8dp"
                android:text="Computer"
                android:textColor="@color/white"
                android:padding="4dp"/>


        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="VS"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>
        <LinearLayout
            android:id="@+id/idLLplayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="4dp"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/idIvPlayer"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="20dp"
                android:src="@drawable/question">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_margin="-8dp"
                android:text="Player"
                android:textColor="@color/white"
                android:padding="4dp"/>


        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sample"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/idTVPlayerwon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:cardBackgroundColor="@color/button_color"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp">
            <LinearLayout
                android:id="@+id/idllRock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/rock"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Rock"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:cardBackgroundColor="@color/button_color"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp">
            <LinearLayout
                android:id="@+id/idllPaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/paper1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Paper"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:cardBackgroundColor="@color/button_color"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp">
            <LinearLayout
                android:id="@+id/idllScissor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/scissor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Scissor"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Score"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:cardBackgroundColor="@color/button_color"
            android:elevation="7dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Computer Score"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"
                    android:padding="5dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/idTvComputerScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:padding="4dp"
                    android:textSize="18sp"/>





            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:cardBackgroundColor="@color/button_color"
            android:elevation="7dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player Score"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"
                    android:padding="5dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/idTvPlayerScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:padding="4dp"
                    android:textSize="18sp"/>





            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <Button
        android:id="@+id/idTvRestartbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Game"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto"
        android:backgroundTint="@color/button_color"/>


</LinearLayout>